<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/purplegradient">


    <TextView
        android:id="@+id/reviewtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Business Review"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/revdescripiton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="This review can be used for work and group projects or other business."
        android:layout_marginLeft="23dp"
        android:textSize="17dp"/>


    <TextView
        android:id="@+id/howtorev"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="23dp"
        android:text="1.Choose an display image" />


    <TextView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="23dp"
        android:text="2.Name your post" />

    <TextView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="23dp"
        android:text="3.Lastly Add your question to your review!" />


</LinearLayout>